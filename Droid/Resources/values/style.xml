	<style name="ApodTheme" parent="android:Theme.Material.Light">
		<!-- Override the app bar color -->
		<item name="android:colorPrimary">@color/primary_color</item>
		<!-- Override the color of UI controls -->
		<item name="android:colorAccent">@color/accent</item>
		<item name="android:datePickerDialogTheme">@style/ApodDatePickerTheme</item>
	</style>
	
	<style name="ApodDatePickerTheme" parent="android:Theme.Material.Light.Dialog">
		<item name="android:colorAccent">@color/dark_primary_color</item>
	</style>

</resources>